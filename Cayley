    <script>
        // ============================================
        // STATE MANAGEMENT
        // ============================================
        const STORAGE_KEY = 'cayleyTableData_v2';
        let currentOrder = 4;
        let colorMap = new Map();
        
        // Vibrant yet readable color palette
        const COLOR_PALETTE = [
            '#FF6B6B', // Coral Red
            '#4ECDC4', // Teal
            '#45B7D1', // Sky Blue
            '#96CEB4', // Sage Green
            '#FFEAA7', // Soft Yellow
            '#DDA0DD', // Plum
            '#98D8C8', // Mint
            '#F7DC6F', // Golden Yellow
            '#BB8FCE', // Lavender
            '#85C1E9', // Light Blue
            '#F8B500', // Amber
            '#00CED1', // Dark Turquoise
            '#FF7F50', // Coral
            '#9370DB', // Medium Purple
            '#3CB371', // Medium Sea Green
            '#FFB6C1', // Light Pink
            '#87CEEB', // Sky Blue Light
            '#DEB887', // Burlywood
            '#90EE90', // Light Green
            '#FFA07A', // Light Salmon
            '#B0E0E6', // Powder Blue
            '#FFDAB9', // Peach Puff
            '#E6E6FA', // Lavender
            '#F0E68C', // Khaki
            '#D8BFD8', // Thistle
            '#AFEEEE', // Pale Turquoise
            '#FFE4E1', // Misty Rose
            '#F5DEB3', // Wheat
            '#E0FFFF', // Light Cyan
            '#FFFACD', // Lemon Chiffon
        ];
        
        let colorIndex = 0;
        
        // ============================================
        // COLOR UTILITIES
        // ============================================
        
        function getColorForValue(value) {
            if (!value || value.trim() === '') return null;
            
            const trimmed = value.trim();
            
            if (!colorMap.has(trimmed)) {
                const color = COLOR_PALETTE[colorIndex % COLOR_PALETTE.length];
                colorMap.set(trimmed, color);
                colorIndex++;
                updateColorLegend();
            }
            
            return colorMap.get(trimmed);
        }
        
        function getContrastColor(hexColor) {
            if (!hexColor) return '#1a1a1a';
            
            const hex = hexColor.replace('#', '');
            const r = parseInt(hex.substr(0, 2), 16);
            const g = parseInt(hex.substr(2, 2), 16);
            const b = parseInt(hex.substr(4, 2), 16);
            
            // Relative luminance calculation
            const luminance = (0.299 * r + 0.587 * g + 0.114 * b) / 255;
            
            return luminance > 0.6 ? '#1a1a1a' : '#ffffff';
        }
        
        function updateColorLegend() {
            const legend = document.getElementById('colorLegend');
            const count = document.getElementById('legendCount');
            
            if (colorMap.size === 0) {
                legend.innerHTML = '<span class="text-slate-400 text-sm italic">No values entered yet ‚Äî start typing in the grid!</span>';
                count.textContent = '';
                return;
            }
            
            count.textContent = `(${colorMap.size} unique values)`;
            legend.innerHTML = '';
            
            colorMap.forEach((color, value) => {
                const chip = document.createElement('div');
                chip.className = 'legend-chip animate-fadeIn';
                chip.style.backgroundColor = color;
                chip.style.color = getContrastColor(color);
                
                const dot = document.createElement('span');
                dot.className = 'w-3 h-3 rounded-full';
                dot.style.backgroundColor = getContrastColor(color);
                dot.style.opacity = '0.3';
                
                const text = document.createElement('span');
                text.textContent = value;
                
                chip.appendChild(dot);
                chip.appendChild(text);
                legend.appendChild(chip);
            });
        }
        
        // ============================================
        // GRID GENERATION
        // ============================================
        
        function generateGrid(order, savedData = null) {
            currentOrder = order;
            const tbody = document.getElementById('tableBody');
            tbody.innerHTML = '';
            
            // Reset colors if fresh start
            if (!savedData) {
                colorMap.clear();
                colorIndex = 0;
            }
            
            const cellSize = order > 8 ? '2.75rem' : order > 6 ? '3rem' : '3.5rem';
            
            for (let i = 0; i <= order; i++) {
                const row = document.createElement('tr');
                
                for (let j = 0; j <= order; j++) {
                    const cell = document.createElement('td');
                    cell.className = 'cayley-cell';
                    cell.style.width = cellSize;
                    cell.style.height = cellSize;
                    
                    const input = document.createElement('input');
                    input.type = 'text';
                    input.className = 'cayley-input';
                    input.maxLength = 5;
                    input.dataset.row = i.toString();
                    input.dataset.col = j.toString();
                    input.autocomplete = 'off';
                    input.spellcheck = false;
                    
                    if (i === 0 && j === 0) {
                        // Operation symbol cell
                        cell.classList.add('operation-cell');
                        input.id = 'op-symbol';
                        input.value = savedData?.operation || '‚àó';
                        input.placeholder = '‚àó';
                    } else if (i === 0 || j === 0) {
                        // Header cells
                        cell.classList.add('header-cell');
                        input.id = `header-${i}-${j}`;
                        
                        if (savedData?.headers?.[`${i}-${j}`] !== undefined) {
                            input.value = savedData.headers[`${i}-${j}`];
                        } else {
                            const idx = i === 0 ? j - 1 : i - 1;
                            input.value = idx.toString();
                        }
                    } else {
                        // Data cells
                        input.id = `cell-${i}-${j}`;
                        input.placeholder = '¬∑';
                        
                        if (savedData?.cells?.[`${i}-${j}`]) {
                            const val = savedData.cells[`${i}-${j}`];
                            input.value = val;
                            const color = getColorForValue(val);
                            if (color) {
                                cell.style.backgroundColor = color;
                                input.style.color = getContrastColor(color);
                            }
                        }
                        
                        input.addEventListener('input', handleCellInput);
                    }
                    
                    input.addEventListener('input', saveState);
                    input.addEventListener('keydown', handleKeyNav);
                    input.addEventListener('focus', () => input.select());
                    
                    cell.appendChild(input);
                    row.appendChild(cell);
                }
                
                tbody.appendChild(row);
            }
            
            updateColorLegend();
            saveState();
        }
        
        function handleCellInput(e) {
            const input = e.target;
            const cell = input.parentElement;
            const value = input.value;
            const color = getColorForValue(value);
            
            if (color) {
                cell.style.backgroundColor = color;
                input.style.color = getContrastColor(color);
            } else {
                cell.style.backgroundColor = '';
                input.style.color = '';
            }
            
            updateAllCellColors();
        }
        
        function updateAllCellColors() {
            for (let i = 1; i <= currentOrder; i++) {
                for (let j = 1; j <= currentOrder; j++) {
                    const input = document.getElementById(`cell-${i}-${j}`);
                    if (!input) continue;
                    
                    const cell = input.parentElement;
                    const value = input.value;
                    const color = getColorForValue(value);
                    
                    if (color) {
                        cell.style.backgroundColor = color;
                        input.style.color = getContrastColor(color);
                    } else {
                        cell.style.backgroundColor = '';
                        input.style.color = '';
                    }
                }
            }
        }
        
        // ============================================
        // KEYBOARD NAVIGATION
        // ============================================
        
        function handleKeyNav(e) {
            const row = parseInt(e.target.dataset.row);
            const col = parseInt(e.target.dataset.col);
            let nextRow = row;
            let nextCol = col;
            let shouldMove = false;
            
            switch (e.key) {
                case 'ArrowUp':
                    e.preventDefault();
                    nextRow = Math.max(0, row - 1);
                    shouldMove = true;
                    break;
                    
                case 'ArrowDown':
                    e.preventDefault();
                    nextRow = Math.min(currentOrder, row + 1);
                    shouldMove = true;
                    break;
                    
                case 'ArrowLeft':
                    if (e.target.selectionStart === 0 || e.target.value === '') {
                        e.preventDefault();
                        nextCol = Math.max(0, col - 1);
                        shouldMove = true;
                    }
                    break;
                    
                case 'ArrowRight':
                    if (e.target.selectionStart === e.target.value.length || e.target.value === '') {
                        e.preventDefault();
                        nextCol = Math.min(currentOrder, col + 1);
                        shouldMove = true;
                    }
                    break;
                    
                case 'Enter':
                    e.preventDefault();
                    // Move right, then wrap to next row
                    if (col < currentOrder) {
                        nextCol = col + 1;
                    } else if (row < currentOrder) {
                        nextRow = row + 1;
                        nextCol = (row === 0) ? 0 : 1;
                    }
                    shouldMove = true;
                    break;
                    
                case 'Tab':
                    // Let Tab work naturally but track position
                    break;
                    
                default:
                    return;
            }
            
            if (shouldMove && (nextRow !== row || nextCol !== col)) {
                focusCell(nextRow, nextCol);
            }
        }
        
        function focusCell(row, col) {
            let input;
            
            if (row === 0 && col === 0) {
                input = document.getElementById('op-symbol');
            } else if (row === 0 || col === 0) {
                input = document.getElementById(`header-${row}-${col}`);
            } else {
                input = document.getElementById(`cell-${row}-${col}`);
            }
            
            if (input) {
                input.focus();
            }
        }
        
        // ============================================
        // PERSISTENCE
        // ============================================
        
        function saveState() {
            const data = {
                order: currentOrder,
                operation: document.getElementById('op-symbol')?.value || '‚àó',
                headers: {},
                cells: {},
                colorMapData: Array.from(colorMap.entries())
            };
            
            // Save headers
            for (let i = 0; i <= currentOrder; i++) {
                for (let j = 0; j <= currentOrder; j++) {
                    if ((i === 0 || j === 0) && !(i === 0 && j === 0)) {
                        const input = document.getElementById(`header-${i}-${j}`);
                        if (input) data.headers[`${i}-${j}`] = input.value;
                    }
                }
            }
            
            // Save cells
            for (let i = 1; i <= currentOrder; i++) {
                for (let j = 1; j <= currentOrder; j++) {
                    const input = document.getElementById(`cell-${i}-${j}`);
                    if (input && input.value) {
                        data.cells[`${i}-${j}`] = input.value;
                    }
                }
            }
            
            try {
                localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
            } catch (e) {
                console.warn('Could not save to localStorage:', e);
            }
        }
        
        function loadState() {
            try {
                const saved = localStorage.getItem(STORAGE_KEY);
                if (!saved) return false;
                
                const data = JSON.parse(saved);
                
                // Restore color map first
                if (data.colorMapData) {
                    colorMap = new Map(data.colorMapData);
                    colorIndex = colorMap.size;
                }
                
                document.getElementById('orderInput').value = data.order || 4;
                generateGrid(data.order || 4, data);
                
                return true;
            } catch (e) {
                console.warn('Could not load from localStorage:', e);
                return false;
            }
        }
        
        function clearAll() {
            const confirmMsg = 'Clear all data and start fresh?\n\nThis cannot be undone.';
            if (!confirm(confirmMsg)) return;
            
            localStorage.removeItem(STORAGE_KEY);
            colorMap.clear();
            colorIndex = 0;
            
            const order = parseInt(document.getElementById('orderInput').value) || 4;
            generateGrid(order);
        }
        
        // ============================================
        // EXPORT
        // ============================================
        
        async function exportAsJPG() {
            const exportBtn = document.getElementById('exportBtn');
            const originalHTML = exportBtn.innerHTML;
            
            try {
                exportBtn.disabled = true;
                exportBtn.innerHTML = `
                    <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    Generating...
                `;
                
                // Remove focus outlines temporarily
                const focused = document.activeElement;
                if (focused) focused.blur();
                
                await new Promise(r => setTimeout(r, 100));
                
                const wrapper = document.getElementById('exportWrapper');
                
                const canvas = await html2canvas(wrapper, {
                    backgroundColor: '#ffffff',
                    scale: 3, // High resolution
                    logging: false,
                    useCORS: true,
                    allowTaint: true,
                    removeContainer: true
                });
                
                // Create download link
                const link = document.createElement('a');
                const timestamp = new Date().toISOString().slice(0, 10);
                link.download = `cayley-table-n${currentOrder}-${timestamp}.jpg`;
                link.href = canvas.toDataURL('image/jpeg', 0.95);
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                
                // Success feedback
                exportBtn.innerHTML = `
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Downloaded!
                `;
                exportBtn.classList.remove('btn-success');
                exportBtn.style.background = 'linear-gradient(135deg, #10b981 0%, #059669 100%)';
                
                setTimeout(() => {
                    exportBtn.innerHTML = originalHTML;
                    exportBtn.disabled = false;
                }, 2000);
                
            } catch (error) {
                console.error('Export failed:', error);
                alert('Export failed. Please try again.');
                exportBtn.innerHTML = originalHTML;
                exportBtn.disabled = false;
            }
        }
        
        // ============================================
        // EVENT LISTENERS
        // ============================================
        
        document.getElementById('generateBtn').addEventListener('click', () => {
            const order = Math.min(15, Math.max(1, parseInt(document.getElementById('orderInput').value) || 4));
            document.getElementById('orderInput').value = order;
            
            colorMap.clear();
            colorIndex = 0;
            generateGrid(order);
            
            // Focus first data cell
            setTimeout(() => focusCell(1, 1), 50);
        });
        
        document.getElementById('clearBtn').addEventListener('click', clearAll);
        document.getElementById('exportBtn').addEventListener('click', exportAsJPG);
        
        document.getElementById('orderInput').addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                document.getElementById('generateBtn').click();
            }
        });
        
        // ============================================
        // INITIALIZATION
        // ============================================
        
        document.addEventListener('DOMContentLoaded', () => {
            if (!loadState()) {
                generateGrid(4);
            }
            
            // Focus first data cell after a brief delay
            setTimeout(() => {
                const firstCell = document.getElementById('cell-1-1');
                if (firstCell) firstCell.focus();
            }, 100);
        });
    </script>
</body>
</html>
